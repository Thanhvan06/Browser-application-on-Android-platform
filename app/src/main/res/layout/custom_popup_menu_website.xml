<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back_ground_popup_menu_website_custom"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_website_reopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableTint="#F8DE22"
            android:drawableStart="@drawable/ic_refresh"
            android:padding="5dp" />

        <TextView
            android:id="@+id/menu_website_book_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableTint="#F8DE22"
            android:drawableStart="@drawable/ic_bookmark"
            android:padding="5dp" />

        <TextView
            android:id="@+id/menu_website_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableTint="#F8DE22"
            android:drawableStart="@drawable/ic_share"
            android:padding="5dp" />

        <TextView
            android:id="@+id/menu_website_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableTint="#F8DE22"
            android:drawableStart="@drawable/ic_close"
            android:padding="5dp" />
    </LinearLayout>
</LinearLayout>